@{
    var Errors = (List<FluentValidation.Results.ValidationFailure>)ViewData["Error"];
}

@model Subject

@{ 
    if(Errors != null)
    {
        foreach (var error in Errors)
        {
    <div class="alert alert-danger" role="alert">
        @error
    </div>        
        }
    }
}
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div class="form-group">
                <label asp-for="SubjectName">Subject Name</label>
                <input type="text" asp-for="SubjectName" class="form-control" id="subjectName" aria-describedby="subjectName" placeholder="Enter Subject Name">
            </div>
            <button type="submit" class="btn-colour-1" value="Submit">Add</button>
        </form>
        </div>
    </div>



