
@{
    var Subject = (Subject)ViewData["Subject"];
}

@model Subject
    <div class="content">
        <h1>Edit Subject</h1>
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit" method="post">
                    <div class="form-group">
                        <div>
                            <input type="hidden" name="Id" asp-for="@Subject.Id" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="SubjectName">New Subject's Name</label>
                        <input type="text" asp-for="SubjectName" value="@Subject.SubjectName" class="form-control" id="subjectName" aria-describedby="subjectName" placeholder="Enter Session Time">
                        @*<small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>*@
                    </div>
                    <button type="submit" class="btn-colour-1" value="Update">Save</button>
                </form>
            </div>
        </div>
        </div>
