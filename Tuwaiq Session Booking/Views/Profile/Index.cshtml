@using Microsoft.AspNetCore.Identity
@using Tuwaiq_Session_Booking.Data;
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@model Profile

@{
    @*    var user = UserManager.FindByNameAsync(User.Identity.Name);
        int userId = user.Id;
    *@

var Profile = (Profile)ViewData["Profile"];
var FindUser = (IdentityUser)ViewData["User"];

var imgsrc = @Url.Content("~/img/userProfile.png"); // deafult image that's displayed when image is not available
if (Profile.ImageData != null)
{
    var base64 = Convert.ToBase64String(Profile.ImageData);
    imgsrc = string.Format("data:image/jpg;base64,{0}", base64);
}

}

<div class="content">
    <h1>@ViewData["Title"]</h1>
    <div class="row">
        <div class="col-md-6">
            <img src='@imgsrc' style="max-width:300px;max-height:300px" />
        </div>
        <div class="col-md-6 mt-5">
            <h3>@Profile.FirstName @Profile.LastName </h3>
            <h4><strong>Email:</strong> @FindUser.UserName</h4>

        </div>
    </div>
    </div>



